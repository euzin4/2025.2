drop database marina;

create database marina;

\c marina

create table Tipos_Veiculos (codTipo int, descricao varchar(50));

create table Habilitacoes (codH int, tipo varchar(50), idade_min int, descricao varchar(100));

create table Veiculos (matricula int, nome varchar(50), modelo varchar(50), comprimento int, potMotor int, vlDiaria int, codTipo int);

create table Funcionarios (codF int, nome varchar(50), telefone varchar(20), endereco varchar(50), idade int, salario float);

create table Veiculos_Habilitacoes (codTipo int, codH int);

create table Clientes (CPF varchar(15), nome varchar(50), endereco varchar(50), estado_civil varchar(20), num_filhos int, data_nasc date, telefone varchar(20), codh int);

create table Locacoes (codLoc int, valor float, inicio date, fim date, obs varchar(50), matricula int, codF int, CPF varchar(15));
